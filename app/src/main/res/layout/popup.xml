<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hardDark">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:outlineAmbientShadowColor="@color/littleDark"
        app:cardCornerRadius="6dp"
        app:cardElevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/hardDark"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Item"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/nameAddEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Item Name"
                android:textColor="@android:color/white"
                android:textColorHint="@color/littleLight" />

            <EditText
                android:id="@+id/quantityAddEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Quantity"
                android:textColor="@android:color/white"
                android:textColorHint="@color/littleLight" />

            <EditText
                android:id="@+id/colorAddEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Color"
                android:textColor="@android:color/white"
                android:textColorHint="@color/littleLight" />

            <EditText
                android:id="@+id/sizeAddEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Size"
                android:textColor="@android:color/white"
                android:textColorHint="@color/littleLight"
                android:inputType="number"/>

            <Button
                android:id="@+id/addButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:backgroundTint="@color/littleDark"
                android:text="ADD"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>